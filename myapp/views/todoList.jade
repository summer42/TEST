    style.
      .hide{
        display:none!important;
      }
      .input_edit{
        white-space: pre;
        font-size: 24px;
        word-break: break-word;
        padding: 10px 60px 10px 10px;
        margin-left: 45px;
        font-weight: 100;
        display: block;
        line-height: 1.2;
        transition: color 0.4s;
        margin-left: 51px;
        color: #4d4d4d;
      }
      .todo-list li{
        min-height: 59px;
      }
