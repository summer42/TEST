doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title TodoMVC Kata
    link(rel='stylesheet', href='node_modules/todomvc-app-css/index.css')
    link(rel='stylesheet', href='css/toastr.css')
  body
    section.todoapp
      header.header
        h1 todos
        input.new-todo(placeholder='What needs to be done?', autofocus='')
      // This section should be hidden by default and shown when there are todos
      section.main
        input.toggle-all(type='checkbox')
        label(for='toggle-all') Mark all as complete
        ul.todo-list
          // These are here just to show the structure of the list items
          // List items should get the class `editing` when editing and `completed` when marked as completed
          script(type='text/x-handlebars-template').
            {{#each filteredTodos}}
            <li data-id="{{id}}"{{#if isComplete}} class="completed"{{/if}}>
              <div class="view">
                <input class="toggle" type="checkbox"{{#if isComplete}} checked{{/if}}>
                <label>{{title}}</label>
                <button class="destroy"></button>
              </div>
              <input class="edit" value="{{title}}">
            </li>
            {{/each}}
      // This footer should hidden by default and shown when there are todos
      footer.footer
        script(type='text/x-handlebars-template')
          // This should be `0 items left` by default
          span.todo-count
            strong {{uncompletedCount}}
            |  item(s) left
          // Remove this if you don't implement routing
          ul.filters
            li(data-filter="all")
              a(class="{{#if filters.isAll}}selected{{/if}}", href='#/') All
            li(data-filter="active")
              a(class="{{#if filters.isActive}}selected{{/if}}", href='#/active') Active
            li(data-filter="completed")
              a(class="{{#if filters.isCompleted}}selected{{/if}}", href='#/completed') Completed
          {{#if showClearComplete}}
          // Hidden if no completed items are left ↓
          button.clear-completed Clear completed
          {{/if}}
    footer.info
      p Double-click to edit a todo
      // Remove the below line ↓
      p
        | Template by
        a(href='http://sindresorhus.com') Sindre Sorhus
      // Change this out with your name and url ↓
      p
        | Created by
        a(href='http://todomvc.com') you
      p
        | Part of
        a(href='http://todomvc.com') TodoMVC
